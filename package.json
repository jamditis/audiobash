{
  "name": "audiobash",
  "version": "1.2.0",
  "description": "Voice-controlled terminal for Claude Code",
  "main": "electron/main.cjs",
  "author": "Joe Amditis",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron:dev": "concurrently \"vite --port 9527 --strictPort\" \"wait-on http://localhost:9527 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "electron:build:mac:x64": "npm run build && electron-builder --mac --x64",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.21.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.1.0-beta41",
    "openai": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.audiobash.app",
    "productName": "AudioBash",
    "npmRebuild": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/node-pty/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "audiobash-logo.png",
        "to": "audiobash-logo.png"
      },
      {
        "from": "audiobash-logo.ico",
        "to": "audiobash-logo.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "audiobash-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "audiobash-logo.ico",
      "uninstallerIcon": "audiobash-logo.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AudioBash"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "audiobash-logo.png",
      "category": "public.app-category.developer-tools",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "audiobash-logo.png",
      "category": "Development"
    }
  }
}
